<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/b2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:fillViewport="false"
    tools:context=".MainActivity">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/b2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sarvesh.trial1.MainActivity"
    tools:showIn="@layout/activity_main"
    android:clickable="false">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/RegistrationTitle"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/editText"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Team Name:  "
        android:id="@+id/textView2"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TeamNameField"
        android:backgroundTint="#FFFFFF"
        android:text="Cool Team Name"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:singleLine="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Entry 1:"
        android:id="@+id/textView3"
        android:layout_marginTop="31dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView2"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Entry1Field"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView2"
        android:singleLine="true"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_alignRight="@+id/TeamNameField"
        android:layout_alignEnd="@+id/TeamNameField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name 1 :"
        android:id="@+id/textView4"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView3"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/Name1Field"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/Entry1Field"
        android:layout_alignStart="@+id/Entry1Field"
        android:layout_alignRight="@+id/Entry1Field"
        android:layout_alignEnd="@+id/Entry1Field"
        android:singleLine="true"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Entry 2:"
        android:id="@+id/textView5"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Entry2Field"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/Name1Field"
        android:layout_alignStart="@+id/Name1Field"
        android:singleLine="true"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_alignRight="@+id/ResultField"
        android:layout_alignEnd="@+id/ResultField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name 2:"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/Name2Field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Name2Field"
        android:layout_below="@+id/Entry2Field"
        android:layout_alignLeft="@+id/Entry2Field"
        android:layout_alignStart="@+id/Entry2Field"
        android:layout_alignRight="@+id/Entry2Field"
        android:layout_alignEnd="@+id/Entry2Field"
        android:singleLine="true"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Entry 3:"
        android:id="@+id/textView7"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Entry3Field"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignRight="@+id/Name2Field"
        android:layout_alignEnd="@+id/Name2Field"
        android:singleLine="true"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name 3:"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/Name3Field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Name3Field"
        android:layout_below="@+id/Entry3Field"
        android:layout_alignLeft="@+id/Entry3Field"
        android:layout_alignStart="@+id/Entry3Field"
        android:layout_alignRight="@+id/Entry3Field"
        android:layout_alignEnd="@+id/Entry3Field"
        android:singleLine="true"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:editable="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/SubmitBtn"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/Name3Field"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/ResultField"
        android:layout_below="@+id/Name3Field"
        android:layout_alignRight="@+id/TeamNameField"
        android:layout_alignEnd="@+id/TeamNameField"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_margin="10dp"
        android:background="#fcf8f8"
        android:textColor="#080808"
        android:editable="true"
        android:scrollIndicators="right"
        android:clickable="true" />

</RelativeLayout>
    </ScrollView>